@page
@model FANCY_CLOTHES_MANAGEMENT.Pages.ViewProductsModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom styles */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-header {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Product List</h3>
        @if (Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="card">
                    <div class="card-header">
                        @product.ProductName
                        <div class="float-right">
                            <a href="#" class="btn btn-sm btn-info mr-2">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>@product.ShortDescription</p>
                        <p><strong>Price:</strong> $@product.Price</p>
                        <p><strong>Quantity:</strong> @product.Quantity</p>
                        <p><strong>Size:</strong> @product.Size</p>
                        <p><strong>Color:</strong> @product.Color</p>
                        <p><strong>Sold:</strong> @product.Sold</p>
                        <p><strong>Date:</strong> @product.Date.ToShortDateString()</p>
                        <p><strong>Is Available:</strong> @(product.IsAvailable ? "Yes" : "No")</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No products found.</p>
        }
    </div>
</body>
</html>
